---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---

{% set posts = collections.post | reverse %}
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>change the pear</title>
    <link>https://changethepear.com</link>
    <description>the newsletter of change the pear</description>
    <language>en-us</language>
    <lastBuildDate>{{ posts[0].date | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>

    {% for post in posts %}
    <item>
      <title>{{ post.data.title }}</title>
      <link>https://changethepear.com{{ post.url }}</link>
      <guid isPermaLink="true">https://changethepear.com{{ post.url }}</guid>
      <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
      <description><![CDATA[
        {{ post.templateContent | safe }}
      ]]></description>
    </item>
    {% endfor %}
  </channel>
</rss>